---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

type Props = {
    slug: string;
    title: string;
    thumbnail: ImageMetadata;
    thumbWidth: number;
    thumbHeight: number;
};
const { slug, title, thumbnail, thumbWidth, thumbHeight } = Astro.props;
---

<div class="relative">
    <Image src={thumbnail} alt={title} width={thumbWidth} height={thumbHeight} class="absolute" />
    <a href={`${slug}/`}>
        <div
            class="w-100 h-100 items-center aspect-square p-[20px] xl:p-[30px] opacity-0 backdrop-blur-lg transition-all hover:opacity-100 bg-white/65"
        >
            <div
                class="title uppercase pb-4 after:content-[''] relative after:block after:absolute after:left-0 after:bottom-0 after:bg-mavi after:h-[2px] after:w-1/6"
            >
                {title}
            </div>
        </div>
    </a>
</div>
