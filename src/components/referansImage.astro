---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
	imagePath: string;
	altText: string;
}

const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/images/referanslar/*.png");
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "/src/images/referanslar/*.png"`);
---

<Image src={images[imagePath]()} alt={altText} widths={[255]} />
