---
import { getCollection } from "astro:content";
import HoverItem from "~components/HoverItem.astro";
import Layout from "~layouts/Layout.astro";

const allFR = await getCollection("entegre-faaliyet-raporu");
---

<Layout title="Faaliyet RaporlarÄ±" description="qwe">
    <a href="/">HOME</a>
    <div class="grid auto-rows-max grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6 xl:gap-8">
        {
            allFR.map((fr) => (
                <HoverItem
                    slug={fr.slug}
                    title={fr.data.title}
                    thumbnail={fr.data.thumbnail}
                    thumbWidth={fr.data.thumbnail.width}
                    thumbHeight={fr.data.thumbnail.height}
                />
            ))
        }
    </div>
</Layout>
